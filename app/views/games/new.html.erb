<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <div class="game">
        <h1>Longest Word</h1>

        <div class="letters">
          <% @letters.each do |letter| %>
          <div><%= letter.upcase %></div>
          <% end %>
        </div>
        <div class="user-word">
          <form class="form-inline" action="/score" method="GET">
            <input class="d-none" type="text" name="letters" value="<%= @letters.join %>">
            <input class="d-none" type="text" name="t_start" value="<%= @t_start %>">
            <input class="form-control word-input" type="text" name="word">
            <input class="form-control btn-primary" type="submit" value="Submit!">
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

